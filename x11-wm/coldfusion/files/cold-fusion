#/bin/bash

current_user=$(whoami)

DIR=${HOME}/.coldfusion
cf_dir=/home/${current_user}/.coldfusion
cf_cfgd=${cf_dir}/config

# Update to see if we are intending to quit
while true; do
	sleep 1

	# Checking if we need to exit
	if [ -f ${DIR}/status/ext ]; then
		#zenity --question --text='Are you shure' --ok-label='quit' --cancel-label='stay' && break
		# print some options
		case $(zenity --list --text='exit options' --radiolist --column='' --column='text' 1 'shutdown' 2 'restart' 3 'logout' --hide-header) in
		'shudown')
		;;
		'restart')
		;;
		'logout')
			break
		;;
		*)
		;;
		esac

		# Cleaning after ourselves
		rm -rf ${DIR}/status/ext
	fi

	# Check if compiz is alive
#	if [ !(ps -e|grep "compiz") ]; then
#	   cp -L ${cf_cfgd}/compiz.ini /home/${current_user}/.config/compiz/compizconfig/Default.ini
#	   compiz --replace --use-root-window ccp &7
#	fi
done

# Cleaning after ourselves
rm -rf ${DIR}/status/ext
